<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane maxWidth="1865.0" prefHeight="823.0" prefWidth="1865.0" stylesheets="@../Styles/styledash.css" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.DashController">

    <!-- Navbar -->
    <AnchorPane prefHeight="66.0" styleClass="navbar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <HBox alignment="CENTER_RIGHT" prefHeight="66.0" spacing="10">
            <!-- Espace flexible pour pousser le userBox à droite -->
            <Region HBox.hgrow="ALWAYS" />
        </HBox>

        <!-- Profil utilisateur aligné à droite -->
        <HBox fx:id="userBox" layoutX="1345.0" layoutY="19.0" spacing="10">
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
            <ImageView fx:id="userIcon" fitHeight="51.0" fitWidth="53.0" styleClass="user-icon">
                <image>
                    <Image url="@/images/profileicon.png" />
                </image>
            </ImageView>
            <Label fx:id="username" prefHeight="50.0" prefWidth="90.0" styleClass="username" text="Meriem Sassi" />
        </HBox>
    </AnchorPane>

    <!-- Sidebar -->
    <VBox fx:id="sidebar" layoutX="-8.0" layoutY="-239.0" prefHeight="1066.0" prefWidth="269.0" styleClass="sidebar">
        <ImageView fitHeight="215.0" fitWidth="252.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@/images/evolve.png" />
            </image>
        </ImageView>

        <Button fx:id="btnDashboard" styleClass="sidebar-button" text="  Dashboard">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0">
                    <image>
                        <Image url="@/images/dashIcon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnUser" prefHeight="51.0" prefWidth="354.0" styleClass="sidebar-button" text=" Gestion Utilisateurs" textAlignment="CENTER">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0">
                    <image>
                        <Image url="@/images/user.png" />
                    </image>
                </ImageView>
            </graphic>
         <font>
            <Font size="68.0" />
         </font>
        </Button>

        <Button fx:id="btnConges" styleClass="sidebar-button" text=" Gestion Congés">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0">
                    <image>
                        <Image url="@/images/congeIcon.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnRecrutements" styleClass="sidebar-button" text=" Gestion Recrutements">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0">
                    <image>
                        <Image url="@/images/recrut.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnProjets" styleClass="sidebar-button" text=" Gestion Projets">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0">
                    <image>
                        <Image url="@/images/projet.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <Button fx:id="btnTransports" styleClass="sidebar-button" text=" Gestion Transports">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0">
                    <image>
                        <Image url="@/images/transport.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

              <!-- Bouton Déconnexion correctement intégré -->
        <Button fx:id="logout" prefHeight="50.0" prefWidth="230.0" styleClass="sidebar-button" text=" Déconnexion">
            <graphic>
                <ImageView fitHeight="30.0" fitWidth="30.0">
                    <image>
                        <Image url="@/images/logout.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
    </VBox>

</AnchorPane>
