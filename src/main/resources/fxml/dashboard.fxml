<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>

<StackPane maxHeight="Infinity" maxWidth="Infinity" minHeight="300.0" minWidth="1100.0"
           prefHeight="770.0" prefWidth="1300.0"
           xmlns="http://javafx.com/javafx/20.0.2" xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="tn.esprit.Controllers.DashboardController">
    <children>
        <BorderPane prefHeight="700.0" prefWidth="600" fx:id="mainContainer">
            <top>
                <AnchorPane prefHeight="70.0" prefWidth="1700.0">
                    <children>
                        <ImageView fitHeight="66.0" fitWidth="200.0" layoutX="14.0" layoutY="2.0">
                            <image>
                                <Image url="@/images/logo.png" />
                            </image>
                        </ImageView>
                        <Button layoutX="1046.0" layoutY="9.0" prefHeight="50.0" prefWidth="50.0" styleClass="circular-button" stylesheets="@/Styles/color.css">
                            <graphic>
                                <ImageView fitHeight="40.0" fitWidth="40.0">
                                    <image>
                                        <Image url="@/images/profileicon.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>
                </AnchorPane>
            </top>
            <left>
                <VBox spacing="15" style="-fx-background-color: #0047AB; -fx-padding: 10;" prefWidth="250.0">
                    <Button fx:id="dashboard" text="Dashboard" textFill="white" styleClass="nav-btn" stylesheets="@/Styles/color.css" onAction="#handleDashboard" prefWidth="230.0" prefHeight="50.0">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0">
                                <image>
                                    <Image url="@/images/dashIcon.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="gestutiliser" text="Gestion Utilisateur" textFill="white" styleClass="nav-btn" stylesheets="@/Styles/color.css" onAction="#handleGestionUtilisateur" prefWidth="230.0" prefHeight="50.0">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0">
                                <image>
                                    <Image url="@/images/user.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="gestrec" text="Gestion Recrutement" textFill="white" styleClass="nav-btn" stylesheets="@/Styles/color.css" prefWidth="230.0" prefHeight="50.0">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0">
                                <image>
                                    <Image url="@/images/recrut.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="gestpro" text="Gestion Projet" textFill="white" styleClass="nav-btn" stylesheets="@/Styles/color.css" prefWidth="230.0" prefHeight="50.0">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0">
                                <image>
                                    <Image url="@/images/projet.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="gestran" text="Gestion Transport" textFill="white" styleClass="nav-btn" stylesheets="@/Styles/color.css" prefWidth="230.0" prefHeight="50.0">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0">
                                <image>
                                    <Image url="@/images/transport.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                    <VBox prefHeight="250.0" /> <!-- Espacement pour pousser Déconnexion en bas -->
                    <Button fx:id="logout" text="Déconnexion" textFill="white" styleClass="nav-btn" stylesheets="@/Styles/color.css" prefWidth="230.0" prefHeight="50.0">
                        <graphic>
                            <ImageView fitHeight="30.0" fitWidth="30.0">
                                <image>
                                    <Image url="@/images/logout.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </VBox>
            </left>
            <center>
                <AnchorPane fx:id="tableblanche" prefWidth="1000.0" prefHeight="600.0">
                    <VBox alignment="TOP_CENTER" spacing="10.0" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0"
                          AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                    </VBox>
                </AnchorPane>
            </center>

        </BorderPane>
    </children>
</StackPane>
