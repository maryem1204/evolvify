<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="root" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.ProjectListController">
    <!-- Pas de styles ici -->
    <stylesheets>
        <URL value="@../Styles/AjoutProjet.css" />
        <URL value="@../Styles/color.css" />
        <URL value="@../Styles/styles.css" />
    </stylesheets>

    <AnchorPane prefHeight="400.0" prefWidth="600.0">
        <VBox alignment="CENTER" layoutX="20.0" layoutY="50.0" prefHeight="400.0" prefWidth="850.0" spacing="10">
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" prefHeight="80.0" prefWidth="1050.0" spacing="10" style="-fx-background-color: white;">
                <Label style="-fx-text-fill: #201abf;" text="Project Management">
                    <font>
                        <Font name="System Bold" size="22.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <TextField fx:id="recherche" prefHeight="35.0" prefWidth="350.0" promptText="Rechercher un projet" styleClass="search-bar" />
                <Button onAction="#openAjoutProjetPopup" styleClass="gradient-button" text="+ Create Project" />
            </HBox>

            <!-- Ajout d'un ScrollPane pour la table -->
            <ScrollPane fitToHeight="true" fitToWidth="true">
                <TableView fx:id="projectTable" prefHeight="344.0" prefWidth="849.0">
                    <columns>
                        <TableColumn fx:id="colName" prefWidth="120" text="Project Name" />
                        <TableColumn fx:id="colAbbreviation" prefWidth="100" text="Abbreviation" />
                        <TableColumn fx:id="colStatus" prefWidth="80" text="Status" />
                        <TableColumn fx:id="colStarterDate" prefWidth="100" text="Start Date" />
                        <TableColumn fx:id="colEndDate" prefWidth="100" text="End Date" />
                        <TableColumn fx:id="colManagerId" prefWidth="100" text="Equipe" />
                        <TableColumn fx:id="colActions" prefWidth="80" text="Actions" />
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                    </columnResizePolicy>
                </TableView>
            </ScrollPane>
        </VBox>
    </AnchorPane>
</StackPane>
