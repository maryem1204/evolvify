<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="tn.esprit.Controllers.DashboardCongeRh" stylesheets="@../Styles/DashboardCongeRh.css">

    <!-- Contenu principal -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20 20 20 20;"> <!-- Correction ici -->
            <HBox spacing="10">
                <TextField fx:id="searchField" promptText="Rechercher un congé..." styleClass="searchInput" maxWidth="300"/>
                <Button text="🔍" fx:id="searchButton" onAction="#handleSearch" styleClass="searchButton" alignment="TOP_RIGHT"/>
                <Button text="+ Ajouter Congé" fx:id="addLeaveButton" styleClass="gradient-button" onAction="#showAddCongePopup" />
            </HBox>

            <!-- Espacement entre les boutons "Congés", "TT" et "Autorisation" et la table -->
            <HBox spacing="15" alignment="CENTER">
                <Button text="Congés" onAction="#showConges" styleClass="button-small"/>
                <Button text="TT" onAction="#showTT" styleClass="button-small"/>
            </HBox>

            <!-- Espacement entre les boutons et le tableau -->
            <Region style="-fx-pref-height: 20px;"/>

            <!-- Conteneur pour les deux TableView -->
            <StackPane>
                <!-- Tableau des congés -->
                <TableView fx:id="leaveTable" visible="true" style="-fx-border-color: #ddd;">
                    <columns>
                        <TableColumn text="Employé" fx:id="colEmployee" />
                        <TableColumn text="Type" fx:id="colType" />
                        <TableColumn text="Date début" fx:id="colStartDate" />
                        <TableColumn text="Date fin" fx:id="colEndDate" />
                        <TableColumn text="Jours" fx:id="colDays" />
                        <TableColumn text="Raison" fx:id="colReason" />
                        <TableColumn text="Statut" fx:id="colStatus" />
                        <TableColumn text="Actions" fx:id="colActions"/>
                    </columns>
                </TableView>

                <!-- Tableau des TT -->
                <TableView fx:id="leaveTt" visible="false" style="-fx-border-color: #ddd;">
                    <columns>
                        <TableColumn text="Employé" fx:id="colEmployeeTT" />
                        <TableColumn text="Date début" fx:id="colStartDateTT" />
                        <TableColumn text="Date fin" fx:id="colEndDateTT" />
                        <TableColumn text="Jours" fx:id="colDaysTT" />
                        <TableColumn text="Statut" fx:id="colStatusTT" />
                        <TableColumn text="Actions" fx:id="colActionsTT"/>
                    </columns>
                </TableView>
            </StackPane>

        </VBox>
    </center>

</BorderPane>
