<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/8.0" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="tn.esprit.Controllers.ListUsersController"
            style="-fx-background-color: transparent; -fx-padding: 20px;"
            stylesheets="@../Styles/stylesListUser.css">

    <!-- Header avec titre et barre de recherche -->
    <top>
        <VBox spacing="10">
            <HBox spacing="10" style="-fx-padding: 10px;">
                <Label text=" Liste des Utilisateurs"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #0047AB; " />
                <Pane HBox.hgrow="ALWAYS"/>
                <Button text="+ Ajouter Employé" onAction="#showAddEmployeePopup"
                        styleClass="gradient-button"/>
            </HBox>

            <!-- Barre de recherche -->
            <HBox alignment="CENTER_LEFT" spacing="10" styleClass="searchBox" maxWidth="400">
                <TextField fx:id="searchField" promptText="Rechercher un employé..."
                           styleClass="searchInput" maxWidth="300"/>

                <Button fx:id="searchButton" onAction="#handleSearch"
                        styleClass="searchButton" alignment="TOP_RIGHT">
                    <graphic>
                        <ImageView fitWidth="20" fitHeight="20">
                            <image>
                                <Image url="@../images/search-1.jpg"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
        </VBox>
    </top>

    <!-- TableView bien positionné -->
    <center>
        <AnchorPane >
            <TableView fx:id="employeeTable" AnchorPane.topAnchor="0.0"
                       AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                       AnchorPane.rightAnchor="0.0" prefHeight="700" prefWidth="1600">
                <columns>
                    <TableColumn fx:id="colProfile" text="Profile" prefWidth="80"/>
                    <TableColumn fx:id="colFirstName" text="Nom" prefWidth="120"/>
                    <TableColumn fx:id="colLastName" text="Prénom" prefWidth="120"/>
                    <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                    <TableColumn fx:id="colBirthday" text="Date de Naissance" prefWidth="100"/>
                    <TableColumn fx:id="colJoiningDate" text="Date d'embauche" prefWidth="100"/>
                    <TableColumn fx:id="colRole" text="Rôle" prefWidth="120"/>
                    <TableColumn fx:id="colNumTel" text="Téléphone" prefWidth="120"/>
                    <TableColumn fx:id="colCongeRestant" text="Congés Restants" prefWidth="120"/>
                    <TableColumn fx:id="colTtRestants" text="TT Restants" prefWidth="120"/>
                    <TableColumn fx:id="colActions" text="Actions" prefWidth="200"/>
                </columns>
            </TableView>
        </AnchorPane>
    </center>

</BorderPane>
