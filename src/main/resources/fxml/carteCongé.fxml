<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="rootPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="tn.esprit.Controllers.CarteConge">
    <VBox alignment="CENTER" layoutX="-19.0" layoutY="2.0" prefHeight="282.0" prefWidth="332.0" spacing="15" styleClass="card" stylesheets="@../Styles/CarteConge.css">
        <!-- Bouton de fermeture en haut à droite -->
        <HBox alignment="TOP_RIGHT" stylesheets="@../Styles/CarteConge.css">
            <Button fx:id="btnAnnuler" onAction="#handleClose" style="-fx-background-color: transparent; -fx-font-size: 30px;" text="✖">
            <HBox.margin>
               <Insets right="-23.0" top="-25.0" />
            </HBox.margin></Button>
        </HBox>
        <Label style="-fx-font-size: 18; -fx-font-weight: bold;" stylesheets="@../Styles/CarteConge.css" text="Ajouter Congé">
         <VBox.margin>
            <Insets right="16.0" top="-48.0" />
         </VBox.margin></Label>

        <HBox alignment="CENTER" spacing="10">
            <Label style="-fx-text-fill: #3b82f6; -fx-font-weight: bold;" text="1" />
            <Label stylesheets="@../Styles/CarteConge.css" text="Choisir le type de congé">
            <HBox.margin>
               <Insets right="16.0" />
            </HBox.margin></Label>
        </HBox>

        <HBox alignment="CENTER" spacing="10" stylesheets="@../Styles/CarteConge.css">
            <Label style="-fx-text-fill: grey;" text="2" />
            <Label stylesheets="@../Styles/CarteConge.css" text="Remplir la demande">
            <HBox.margin>
               <Insets right="25.0" />
            </HBox.margin></Label>
        </HBox>

        <Label style="-fx-font-weight: bold;" stylesheets="@../Styles/CarteConge.css" text="Type de Congé">
         <VBox.margin>
            <Insets right="14.0" />
         </VBox.margin></Label>

        <HBox alignment="CENTER" spacing="20">
            <Button onAction="#showCongePopup" style="-fx-background-color: #f3f7fe; -fx-text-fill: #3b82f6; -fx-background-radius: 8px; -fx-pref-width: 100px; -fx-pref-height: 45px;" stylesheets="@../Styles/CarteConge.css" text="🏖️ Congé">
            <HBox.margin>
               <Insets />
            </HBox.margin></Button>
            <Button onAction="#showTTPopup" style="-fx-background-color: #f3f7fe; -fx-text-fill: #3b82f6; -fx-background-radius: 8px; -fx-pref-width: 100px; -fx-pref-height: 45px;" stylesheets="@../Styles/CarteConge.css" text="💻 TT">
            <HBox.margin>
               <Insets left="25.0" right="-7.0" />
            </HBox.margin></Button>
         <VBox.margin>
            <Insets top="16.0" />
         </VBox.margin>
        </HBox>

        <HBox alignment="CENTER" spacing="10">


        </HBox>
    </VBox>
</AnchorPane>
