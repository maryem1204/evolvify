<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>

<AnchorPane  fx:id="rootPane"  xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.CarteConge">
    <VBox alignment="CENTER" spacing="15">
        <!-- Bouton de fermeture en haut à droite -->
        <HBox alignment="TOP_RIGHT">
            <Button fx:id="btnAnnuler" text="✖" onAction="#handleClose"
                    style="-fx-background-color: transparent; -fx-font-size: 30px;" />
        </HBox>
        <Label text="Ajouter Congé" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

        <HBox spacing="10" alignment="CENTER">
            <Label text="1" style="-fx-text-fill: #3b82f6; -fx-font-weight: bold;"/>
            <Label text="Choisir le type de congé"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER">
            <Label text="2" style="-fx-text-fill: grey;"/>
            <Label text="Remplir la demande"/>
        </HBox>

        <Label text="Type de Congé" style="-fx-font-weight: bold;"/>

        <HBox spacing="20" alignment="CENTER">
            <Button onAction="#showCongePopup" text="🏖️ Congé" style="-fx-background-color: #f3f7fe; -fx-text-fill: #3b82f6; -fx-background-radius: 8px; -fx-pref-width: 100px; -fx-pref-height: 45px;"/>
            <Button  onAction="#showTTPopup" text="💻 TT" style="-fx-background-color: #f3f7fe; -fx-text-fill: #3b82f6; -fx-background-radius: 8px; -fx-pref-width: 100px; -fx-pref-height: 45px;" />
        </HBox>

        <HBox spacing="10" alignment="CENTER">


        </HBox>
    </VBox>
</AnchorPane>