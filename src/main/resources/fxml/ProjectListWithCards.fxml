<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane minHeight="400.0" minWidth="600.0" prefHeight="556.0" prefWidth="926.0" stylesheets="@../Styles/Carte.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tn.esprit.Controllers.ProjectListWithCardsController">

    <!-- En-tête avec recherche et bouton Ajouter -->
    <VBox spacing="10">
        <HBox spacing="10" style="-fx-padding: 10px;">
            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #0047AB;" text="Liste des projets">
            <padding>
               <Insets top="10.0" />
            </padding></Label>

            <!-- Zone de recherche -->
            <HBox alignment="CENTER_LEFT" maxWidth="700" spacing="10" styleClass="searchBox">
                <TextField fx:id="recherche" maxWidth="700" onAction="#handleSearch" prefHeight="39.0" prefWidth="398.0" promptText="Rechercher une tâche..." styleClass="searchInput" />
            </HBox>

            <!-- On remplace le Pane et le HBox par un seul StackPane -->
            <StackPane>

                <ImageView fx:id="notificationIcon" fitHeight="40" fitWidth="40" onMouseClicked="#handleNotificationClick" pickOnBounds="true" style="-fx-cursor: hand" preserveRatio="true" />
                <Label fx:id="notificationBadge" style="-fx-background-color: red;
                                            -fx-text-fill: white;
                                            -fx-font-size: 14px;
                                            -fx-padding: 3px 7px;
                                            -fx-background-radius: 50%;
                                            -fx-translate-x: 10;
                                            -fx-translate-y: -10;" />
                <!-- Le badge s'affichera au-dessus de l'icône -->

            </StackPane>

            <!-- Bouton Ajouter projet -->
            <Button onAction="#openAjoutProjetPopup" prefHeight="54.0" prefWidth="149.0" styleClass="gradient-button" text="+ Ajouter projet">
                <HBox.margin>
                    <Insets left="10.0" />
                </HBox.margin>
            </Button>
        </HBox>

    </VBox>

    <!-- Conteneur Scrollable pour les projets -->
    <ScrollPane fitToHeight="true" fitToWidth="true" layoutY="114.0" prefHeight="400.0" prefWidth="926.0" style="-fx-background-color: transparent; -fx-border-color: transparent;">
        <!-- Utilisation d'un VBox pour contenir plusieurs projets -->
        <VBox fx:id="projectList" alignment="TOP_CENTER" spacing="10">
            <!-- Conteneur GridPane pour un projet, ajouté dynamiquement pour chaque projet -->
            <GridPane fx:id="projectListContainer" alignment="CENTER" hgap="10" vgap="10">
                <Text fx:id="projectTitle" styleClass="project-title" text="Titre du Projet" />
                <Text fx:id="projectDescription" styleClass="project-description" text="Description du projet" />
                <Text fx:id="projectEmploye" styleClass="project-employe" text="Employé Assigné" />
            <columnConstraints>
               <ColumnConstraints />
            </columnConstraints>
            <rowConstraints>
               <RowConstraints />
            </rowConstraints>
            </GridPane>
        </VBox>
    </ScrollPane>

</AnchorPane>
